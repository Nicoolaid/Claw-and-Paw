<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Custom Alert Example</title>
  <style>
    /* Style the modal background */
    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      justify-content: center;
      align-items: center;
    }

    /* Style the alert box */
    .alert-box {
      background-color: white;
      padding: 20px;
      border-radius: 8px;
      text-align: center;
      width: 300px;
    }

    .alert-box button {
      margin-top: 10px;
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .alert-box button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <button id="customAlertButton">Show Custom Alert</button>

  <!-- Custom alert modal -->
  <div class="modal" id="customAlert">
    <div class="alert-box">
      <p>This is a custom alert box!</p>
      <button id="closeAlert">Close</button>
    </div>
  </div>

  <script>
    // Get the modal and buttons
    const modal = document.getElementById("customAlert");
    const showButton = document.getElementById("customAlertButton");
    const closeButton = document.getElementById("closeAlert");

    // Show the modal when the button is clicked
    showButton.addEventListener("click", function () {
      modal.style.display = "flex";
    });

    // Hide the modal when the close button is clicked
    closeButton.addEventListener("click", function () {
      modal.style.display = "none";
    });

    // Optional: Hide the modal when clicking outside the alert box
    window.addEventListener("click", function (event) {
      if (event.target === modal) {
        modal.style.display = "none";
      }
    });
  </script>
</body>
</html>
